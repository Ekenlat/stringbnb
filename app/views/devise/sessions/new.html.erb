<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="home-card card shadowh-lg p-5 text center auth-form-card">
      <% if user_signed_in? %>
      <div class ="mb-4">
        <i class="fa-solid fa_user_circle fa-3x text-primary mb-2"></i>
          <p>You are already connected</p>
            <%= link_to "Go to my account", dashboard_path, class: "btn btn-primary" %>
      </div>
      <% else  %>
      <div class="mb-4">
      <i class="fa-solid fa_user_circle fa-3x text-primary mb-2"></i>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn btn-primary" %>
              </div>
              <% end %>
          <%= render "devise/shared/links" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
