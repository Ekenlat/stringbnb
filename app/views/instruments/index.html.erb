<div class="container">
  <h1>Instruments to Rent</h1>
  <%= link_to "Home", root_path %>
  <%= puts @markers.inspect %>
  <%= render "instruments/search_form" %>
  <div class="row justify-content-center mb-4">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card shadow mapbox-card mb-3">
        <div class="card-header bg-primary text-white d-flex align-items-center">
          <i class="fa-solid fa-map-location-dot me-2"></i>
          <span>Find Instruments Near You</span>
        </div>
        <div class="mapbox-map" style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-api-key-value="pk.eyJ1IjoiZm9yZXhndW1wIiwiYSI6ImNtOWxyMmQ1cDAxOWgybHM2c2pleW5sZXIifQ.dVvbxO_h_SvPM1dvZbILpA"
          data-map-markers-value="<%= @markers.to_json %>">
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% @instruments.each do |instrument| %>
    <div class="col-4 my-3">
      <%= link_to instrument_path(instrument), style: "text-decoration: none;" do %>
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title d-flex justify-content-between align-items-center"><%= instrument.name %>
            <% if user_signed_in? && current_user == instrument.user %>
              <span class="badge bg-primary">My Instrument</span>
            <% end %>
          </h5>
          <%= cl_image_tag instrument.photos.first.key, class: "card-img-top", alt: instrument.name, crop: :fill %>
          <p class="card-text"><%= instrument.description %></p>
          <p class="card-text"><strong>Type:</strong> <%= instrument.instrument_type %></p>
          <p class="card-text"><strong>Price:</strong> $<%= instrument.price_per_day %>â‚¬ per day</p>
          <p class="card-text text-muted mb-0">
          <i class="fa fa-user"></i>
          Owned by: <%= instrument.user.first_name %> <%= instrument.user.last_name %>
          </p>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
