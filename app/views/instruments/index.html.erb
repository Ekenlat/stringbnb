<div class="container">
  <h1>Instruments to Rent</h1>
  <%= link_to "Home", root_path %>

  <%= render "instruments/search_form" %>

  <div class="row justify-content-center mb-4">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card-header bg-primary text-white d-flex align-items-center">
        <i class="fas fa-solid fa-map-location-dot me-2"></i>
        <strong>Find Instruments Near You</strong>
      </div>
      <div class="shadow mapbox-card mb-3"
           id="map"
           style="width: 100%; height: 600px;"
           data-map-target="map"
           data-map-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
           data-markers-value="<%= @markers.to_json %>">
      </div>
    </div>
  </div>

  <div class="row">
    <% @instruments.each do |instrument| %>
      <div class="col-12 col-sm-6 col-lg-4 mb-3">
        <%= link_to instrument_path(instrument), style: "text-decoration: none;" do %>
          <div class="card shadow-sm">
            <div class="card-img-top">
              <% if instrument.photos.attached? %>
                <%= cl_image_tag instrument.photos.first.key, class: "card-img-top", alt: instrument.name, crop: :fill %>
              <% else %>
                <%= image_tag "placeholder.jpeg", class: "card-img-top", alt: "No image available" %>
              <% end %>
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
              <h5 class="card-title text-primary mb-1"><%= instrument.name %></h5>
              <p class="card-text"><%= instrument.description %></p>
              <p class="card-text"><strong>Type :</strong> <%= instrument.instrument_type %></p>
              <p class="card-text"><strong>Price :</strong> <%= instrument.price_per_day %> â‚¬ / day</p>
              <p class="card-text text-muted mb-0">
                <i class="fa fa-user"></i>
                <%= instrument.user.first_name %> <%= instrument.user.last_name %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
